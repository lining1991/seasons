.page{
    padding: 15px;
}
textarea{
    display: block;
    width: 100%;
    border-bottom: 1px solid #999;
    height: 300px;
    max-height: 300px;
    min-height: 100px;
    margin-bottom: 15px;
}
.form-head{
    overflow: hidden;
    margin-bottom: 15px;
}
.tags-wrapper{
    float: left;
}
.tags{
    font-size: 10px;
    display: inline;
    padding: 2px 8px;
    margin: 0 4px;
    background: transparent;
}
.divider{
    margin: 0 5px;
    display: inline-block;
}
.submit-btn{
    float: right;
    font-size: 12px;
    line-height: 24px;
    padding: 0 8px;
}
.square-box{
    width: 100px;
    height: 100px;
    border: 1px solid #eee;
    position: relative;
    float: left;
    margin-left: 5px;
}
.square-box image{
    width: 100%;
    height: 100%;
}
.square-box icon{
    position: absolute;
    z-index: 999;
    top: -3px;
    right: -5px;
}
.upload-btn{
    line-height: 100px;
    text-align: center;
    font-size: 36px;
}
